      <a href="/" class="text-2xl font-bold text-primary">ScrumGuide</a>
      <ul class="hidden md:flex space-x-8">
        {
          menuItems.map((item) => (
            <li>
              <a href={item.href} class="text-gray-600 hover:text-primary transition-colors">
                {item.title}
